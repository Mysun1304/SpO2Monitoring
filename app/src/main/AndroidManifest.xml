<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.plux.api.SpO2Monitoring">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_sq"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        > <!-- @style/Theme.TabbedActivity --> <!-- android:theme="@style/AppTheme"-->

        <!-- @android:style/Theme.Holo.Light -->
        <service
            android:name="info.plux.api.SpO2Monitoring.old.read_from_db.ReadService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="info.plux.api.SpO2Monitoring.activities.ScanActivity"
            android:label="@string/title_activity_scan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" > <!-- android:theme="@style/AppTheme" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.plux.api.SpO2Monitoring.old.DeviceActivity"
            /> <!-- android:theme="@style/Theme.AppCompat.Light"-->
        <activity
            android:name="info.plux.api.SpO2Monitoring.old.PlotterActivity"
           /> <!-- android:theme="@style/Theme.AppCompat.Light"-->

        <activity
            android:name="info.plux.api.SpO2Monitoring.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.AppCompat.Light"/> <!-- android:theme="@style/Theme.AppCompat.Light.NoActionBar" -->
        <!-- android:configChanges="orientation|screenSize" -->
        <!-- automatic adjustment to landscape -->
    </application>

</manifest>